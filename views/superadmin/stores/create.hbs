<form method="POST" class="d-block ajaxForm" action="/stores/create">
    <div class="form-row">
        <div class="form-group col-md-12">
            <label for="registration">
                Store Reg
            </label>
            <input type="text" class="form-control" id="registration" name="registration" required>
            <small id="" class="form-text text-muted">
                store registration
            </small>
        </div>
        <div class="form-group col-md-12">
            <label for="name">
                Store Name
            </label>
            <input type="text" class="form-control" id="name" name="name" required>
            <small id="" class="form-text text-muted">
                store name
            </small>
        </div>
        <div class="form-group col-md-12">
            <label for="address">
                Store address
            </label>
            <input type="text" class="form-control" id="address" name="address" required>
            <small id="" class="form-text text-muted">
                store address
            </small>
        </div>
        <div class="form-group col-md-12">
            <label for="phone">store phone
            </label>
            <input type="text" class="form-control" id="phone" name="phone" required>
            <small id="" class="form-text text-muted">
                store phone
            </small>
        </div>

        <div class="form-group mt-2 col-md-12">
            <button class="btn btn-block btn-primary" type="submit">
                create store
            </button>
        </div>
    </div>
</form>

<script>
    $(".ajaxForm").validate({}); // Jquery form validation initialization
    $(".ajaxForm").submit(function (e) {
        var form = $(this);
        ajaxSubmit(e, form, 'POST', showAllstores);
    });


// initCustomFileUploader();
</script>
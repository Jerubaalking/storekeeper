  <div class="col-xl-12">
    <div class="card">
      <div class="card-body">
        <h4 class="page-title">
          <i class="mdi mdi-account-child-circle text-primary title_icon"></i> {{trs 'all admins'}}
          <button type="button" class="btn btn-outline-primary btn-rounded alignToTitle"
            onclick="largeModal('/admin/create', ' {{trs "create"}} {{trs "admin" }}')"> <i
              class="mdi mdi-plus"></i>
            {{trs 'create'}} {{trs 'admin'}}
          </button>
        </h4>

<form method="POST" class="d-block ajaxForm" action="/admin/create">
    <div class="form-row">
        <div class="form-group col-md-12 row">
            <div class="form-group col-md-6">
                <label for="name">
                    name
                </label>
                <input type="text" class="form-control" id="name" name="name" required>
                <small id="" class="form-text text-muted">
                    provide fullname
                </small>
            </div>
            <div class="form-group col-md-6">
                <label for="email">
                    email
                </label>
                <input type="email" class="form-control" id="email" name="email" required>
                <small id="" class="form-text text-muted">
                    provide email
                </small>
            </div>
        </div>
        <div class="form-group col-md-12 row">
            <div class="form-group col-md-6">
                <label for="phone">
                    phone number
                    {{!-- <a href="#" onclick="addPhone()" class="btn btn-sm btn-light"><i class="mdi mdi-plus"></i></a>
                    --}}
                </label>
                <div id="phoneTray">

                </div>
            </div>
            <div class="form-group col-md-6">
                <label for="password">
                    password
                </label>
                <input type="password" class="form-control" id="password" name="password" required>
                <small id="" class="form-text text-muted">
                    provide password
                </small>
            </div>
        </div>
        <div class="form-group col-md-12 row">
            <div class="form-group col-md-6">
                <label for="gender">
                    gender
                </label>
                <select name="gender" id="gender" class="form-control select2" data-toggle="select2">
                    <option value="">
                        select gender
                    </option>
                    <option value="Male">
                        male
                    </option>
                    <option value="Female">
                        female
                    </option>
                </select>
                <small id="" class="form-text text-muted">
                    provide admin gender
                </small>
            </div>
            <div class="form-group col-md-6">
                <label for="address">
                    address <a href="#" onclick="addAddress()" class="btn btn-sm btn-light"><i
                            class="mdi mdi-plus"></i></a>
                </label>
                <div id="addressTray">

                </div>
            </div>
        </div>

        <div class="form-group mt-2 col-md-12">
            <button class="btn btn-block btn-primary" type="submit">
                create admin
            </button>
        </div>
    </div>
</form>

<script>
    $(document).ready(function () {
        initSelect2(['#businessId', '#gender', '#blood_group']);
        addAddress();
        addPhone();
    });

    $(".ajaxForm").validate({}); // Jquery form validation initialization
    $(".ajaxForm").submit(function (e) {
        var form = $(this);
        ajaxSubmit(e, form, 'POST', showAllAdmins);
    });
</script>
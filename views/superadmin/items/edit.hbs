<form method="POST" class="d-block ajaxForm" action="/items/edit/{{item.id}}">
    <div class="form-row">
        <div class="form-group col-md-12">
            <label for="storeId">Store
            </label>
            <select name="storeId" id="storeId" class="form-control select2" data-toggle="select2" required>

                {{#each stores}}
                {{#ifEquals id ../item.storeId}}
                <option value="{{id}}" selected>
                    {{name}}
                </option>
                {{else}}
                <option value="{{id}}">
                    {{name}}
                </option>
                {{/ifEquals}}
                {{/each}}
            </select>
            <small id="class_help" class="form-text text-muted">
                provide store
            </small>
        </div>
        <div class="form-group col-md-12">
            <label for="classId_on_create">Items category
            </label>
            <select name="itemCategoryId" id="classId_on_create" class="form-control select2" data-toggle="select2"
                required>
                {{#each categories}}
                {{#ifEquals id ../item.categoryId}}
                <option value="{{id}}" selected>
                    {{name}}
                </option>
                {{else}}
                <option value="{{id}}">
                    {{name}}
                </option>
                {{/ifEquals}}
                {{/each}}
            </select>
            <small id="class_help" class="form-text text-muted">
                provide category
            </small>
        </div>
        <div class="form-group col-md-12">
            <label for="name">
                Item name
            </label>
            <input type="text" class="form-control" value="{{name}}" id="name" name="name" required>
            <small id="name_help" class="form-text text-muted">
                provide item name
            </small>
        </div>

        <div class="form-group col-md-12">
            <label for="model">
                Item model
            </label>
            <input type="text" class="form-control" value="{{name}}" id="model" name="model" required>
            <small id="model_help" class="form-text text-muted">
                provide item model
            </small>
        </div>

        <div class="form-group col-md-12">
            <label for="version">
                Item version
            </label>
            <input type="text" class="form-control" value="{{version}}" id="version" name="version" required>
            <small id="version_help" class="form-text text-muted">
                provide item version
            </small>
        </div>

        <div class="form-group col-md-12">
            <label for="barcode">
                Item barcode
            </label>
            <input type="text" class="form-control" value="{{barcode}}" id="barcode" name="barcode" required>
            <small id="barcode_help" class="form-text text-muted">
                provide item barcode
            </small>
        </div>

        <div class="form-group col-md-12">
            <label for="type">
                type
            </label>
            <select class="form-control select2" data-toggle="select2" name="type" id="type" required>

                {{#ifEquals 'unknown' type}}
                <option value="unknown" selected>unknown
                </option>
                {{else}}
                <option value="unknown">unknown
                </option>
                {{/ifEquals}}
                {{#ifEquals 'liquid' type}}

                <option value="liquid" selected><i class="mdi mdi-account"></i>
                    liquid
                </option>
                {{else}}

                <option value="liquid"><i class="mdi mdi-account"></i>
                    liquid
                </option>
                {{/ifEquals}}
                {{#ifEquals 'solid' type}}
                <option value="solid" selected><i class="mdi mdi-toxic"></i>
                    solid
                </option>
                {{else}}
                <option value="solid"><i class="mdi mdi-toxic"></i>
                    solid
                </option>
                {{/ifEquals}}
                {{#ifEquals 'gas' type}}
                <option value="gas" selected><i class="mdi mdi-gas"></i>
                    gas
                </option>
                {{else}}
                <option value="gas"><i class="mdi mdi-gas"></i>
                    gas
                </option>
                {{/ifEquals}}
                {{#ifEquals 'powder' type}}
                <option value="powder" selected><i class="mdi mdi-powder"></i>
                    powder
                </option>
                {{else}}
                <option value="powder"><i class="mdi mdi-powder"></i>
                    powder
                </option>
                {{/ifEquals}}
                {{#ifEquals 'organic' type}}
                <option value="organic" selected><i class="mdi mdi-organic"></i>
                    organic
                </option>
                {{else}}
                <option value="organic"><i class="mdi mdi-organic"></i>
                    organic
                </option>
                {{/ifEquals}}
            </select>
        </div>
        <div class="form-group  col-md-12">
            <button class="btn btn-block btn-primary" type="submit">
                create item
            </button>
        </div>
    </div>
    <div class="form-row">

        <div class="form-group col-md-12">
            <label for="classId_on_create">Class
            </label>
            <select name="classId" id="classId_on_create" class="form-control select2" data-toggle="select2" required>
                <option value="">select class
                </option>
                {{#each classes}}
                {{#ifEquals id ../item.classId}}
                <option value="{{id}}" selected>
                    {{name}}
                </option>
                {{else}}
                <option value="{{id}}">
                    {{name}}
                </option>
                {{/ifEquals}}
                {{/each}}
            </select>
            <small id="class_help" class="form-text text-muted">
                provide classes
            </small>
        </div>

        <div class="form-group col-md-12">
            <label for="name">
                Item name
            </label>
            <input type="text" class="form-control" id="name" value="{{item.name}}" name="name" required>
            <small id="name_help" class="form-text text-muted">
                provide item name
            </small>
        </div>

        <div class="form-group  col-md-12">
            <button class="btn btn-block btn-primary" type="submit">
                update item
            </button>
        </div>
    </div>
</form>

<script>
    $(document).ready(function () {
        initSelect2(['#classId_on_create']);
    });
    $(".ajaxForm").validate({}); // Jquery form validation initialization
    $(".ajaxForm").submit(function (e) {
        var form = $(this);
        ajaxSubmit(e, form, 'POST', showAllItems);
    });
</script>
<script>
    var showAllDeductions = function () {
        var url = '/deductions/list';

        $.ajax({
            type: 'GET',
            url: url,
            success: function (response) {
                $('.deduction_content').html(response);
                initDataTable('basic-datatable');
            }
        });
    }
    showAllDeductions();
</script>
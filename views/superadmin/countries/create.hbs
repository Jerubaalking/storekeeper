<form method="POST" class="d-block ajaxForm" action="/countries/create">
    <div class="form-row">
        <div class="form-group col-md-12 row">
            <div class="form-group col-md-6">
                <label for="name">
                    {{trs 'name'}}
                </label>
                <input type="text" class="form-control" id="name" name="name" required>
                <small id="" class="form-text text-muted">
                    {{trs 'provide'}} {{trs 'fullname'}}
                </small>
            </div>
            <div class="form-group col-md-6">
                <label for="initial">
                    {{trs 'initial'}}
                </label>
                <input type="initial" class="form-control" id="initial" name="initial" required>
                <small id="" class="form-text text-muted">
                    {{trs 'provide'}} {{trs 'initial'}}
                </small>
            </div>
            <div class="form-group col-md-6">
                <label for="zip">
                    {{trs 'zip'}} {{trs 'code'}}
                </label>
                <input type="zip" class="form-control" id="zip" name="zip" required>
                <small id="" class="form-text text-muted">
                    {{trs 'provide'}} {{trs 'zip'}} {{trs 'code'}}
                </small>
            </div>
        </div>

        <div class="form-group mt-2 col-md-12">
            <button class="btn btn-block btn-primary" type="submit">
                {{trs 'create'}} {{trs 'country'}}
            </button>
        </div>
    </div>
</form>

<script>

    $(".ajaxForm").validate({}); // Jquery form validation initialization
    $(".ajaxForm").submit(function (e) {
        var form = $(this);
        ajaxSubmit(e, form, 'POST', showAllCurrencies);
    });
</script>
<table id="basic-datatable" class="table table-striped dt-responsive nowrap" width="100%">
	<thead>
		<tr style="background-color: #313a46; color: #ababab;">
			<th>{{trs 'name'}}</th>
			<th>{{trs 'registration'}}</th>
			<th>TIN</th>
			<th>{{trs 'phone'}}</th>
			<th>{{trs 'address'}}</th>
			<th>{{trs 'stores'}}</th>
			<th>{{trs 'purpose'}}</th>
			<th>{{trs 'options'}}</th>
		</tr>
	</thead>
	<tbody>
		{{#each businesses}}
		<tr>
			<td>{{name}}</td>
			<td>{{registration}}</td>
			<td>{{tin}}</td>
			<td>{{phone}}</td>
			<td>{{address}}</td>
			<td>
				<ul>
					{{#each stores}}
					<li>{{name}}</li>
					{{/each}}
				</ul>
			</td>
			<td>{{about}}</td>
			<td>
				<div class="dropdown text-center">
					<button type="button"
						class="btn btn-sm btn-icon btn-rounded btn-outline-secondary dropdown-btn dropdown-toggle arrow-none card-drop"
						data-toggle="dropdown" aria-expanded="false"><i class="mdi mdi-dots-vertical"></i></button>
					<div class="dropdown-menu dropdown-menu-right">
						<!-- item-->
						<a href="javascript:void(0);" class="dropdown-item"
							onclick="largeModal('/businesses/edit/{{id}}', '{{trs 'update'}} {{trs 'Business'}}');">{{trs
							'edit'}}</a>
						<!-- item-->
						<a href="javascript:void(0);" class="dropdown-item"
							onclick="confirmModal('/businesses/delete/{{id}}', showAllBusinesses)">{{trs
							'delete'}}</a>
					</div>
				</div>
			</td>
		</tr>
		{{/each}}
	</tbody>
</table>
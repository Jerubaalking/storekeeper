<form method="POST" class="col-12 d-block ajaxForm bg-white" action="/customers/edit/{{enrol.id}}"
    id="customer_admission_form" enctype="multipart/form-data">
    <div class="col-md-12 row">
        <div class="form-group row mb-2 col-md-6">
            <label class="col-md-4 col-form-label" for="name">name</label>
            <div class="col-md-8">
                <input type="text" id="name" name="name" value="{{enrol.customer.user.name}}" class="form-control"
                    placeholder="name" required>
            </div>
        </div>

        <div class="form-group row mb-2 col-md-6">
            <label class="col-md-4 col-form-label" for="email">email</label>
            <div class="col-md-8">
                <input type="email" value="{{enrol.customer.user.email}}" class="form-control" id="email" name="email"
                    placeholder="email" required>
            </div>
        </div>

    </div>
    <div class="col-md-12 row">
        <div class="form-group row mb-2 col-md-6">
            <label class="col-md-4 col-form-label" for="password">password</label>
            <div class="col-md-8">
                <input type="password" class="form-control" id="password" name="password" placeholder="password">
            </div>
        </div>

        <div class="form-group row mb-2 col-md-6">
            <label class="col-md-4 col-form-label" for="personelId">personels</label>
            <div class="col-md-8">
                <select id="personelId" name="personelId" class="form-control select2" data-toggle="select2" required>
                    <option value="" disabled>select personel</option>
                    {{#each personels}}
                    {{#ifEquals id ../enrol.customer.personelId}}
                    <option value="{{id}}" selected>
                        {{user.name}}
                    </option>
                    {{else}} <option value="{{id}}">
                        {{user.name}}
                    </option>
                    {{/ifEquals}}
                    {{/each}}
                </select>
            </div>
        </div>
    </div>
    <div class="col-md-12 row">
        <div class="form-group row mb-2 col-md-6">
            <label class="col-md-4 col-form-label" for="classId">
                class
            </label>
            <div class="col-md-8">
                <select name="classId" id="classId" class="form-control select2" data-toggle="select2" required
                    onchange="classWiseSection(this.value)">
                    <option value="" disabled>select class</option>
                    {{#each classes}}
                    {{#ifEquals id ../enrol.classId}}
                    <option value="{{id}}" selected>
                        {{name}}
                    </option>
                    {{else}} <option value="{{id}}">
                        {{name}}
                    </option>
                    {{/ifEquals}}
                    {{/each}}
                </select>
            </div>
        </div>

        <div class="form-group row mb-2 col-md-6">
            <label class="col-md-4 col-form-label" for="sectionId">
                section
            </label>
            <div class="col-md-8" id="section_content">
                <select name="sectionId" id="sectionId" class="form-control select2" data-toggle="select2" required>
                    <option value="">
                        select section
                    </option>
                    {{#each sections}}
                    {{#ifEquals id ../enrol.sectionId}}
                    <option value="{{id}}" selected>
                        {{name}}
                    </option>
                    {{else}} <option value="{{id}}">
                        {{name}}
                    </option>
                    {{/ifEquals}}
                    {{/each}}
                </select>
            </div>
        </div>
    </div>
    <div class="col-md-12 row">


        <div class="form-group row mb-2 col-md-6">
            <label class="col-md-4 col-form-label" for="birthdatepicker">
                birthday
            </label>
            <div class="col-md-8">
                <input type="date" class="form-control date" value="{{setDate enrol.customer.user.birthday}}"
                    id="birthday" name="birthday" required>
            </div>
        </div>
        <div class="form-group row mb-2 col-md-6">
            <label class="col-md-4 col-form-label" for="gender">
                gender
            </label>
            <div class="col-md-8">

                <select name="gender" id="gender" class="form-control select2" data-toggle="select2" required>
                    <option value="">
                        select gender
                    </option>
                    {{#ifEquals 'Male' enrol.customer.user.gender}}
                    <option value="Male" selected>
                        male
                    </option>
                    <option value="Female">
                        female
                    </option>
                    {{else}}
                    <option value="Male">
                        male
                    </option>
                    <option value="Female" selected>
                        female
                    </option>
                    {{/ifEquals}}
                </select>
                <small id="" class="form-text text-muted">
                    provide customer gender
                </small>
            </div>
        </div>
        <div class="form-group row mb-2 col-md-6">
            <label class="col-md-4 col-form-label" for="blood_group">
                blood group
            </label>
            <div class="col-md-8">
                <select name="blood_group" id="blood_group" class="form-control select2" data-toggle="select2">
                    <option value="" selected disabled>
                        blood group
                    </option>


                    {{#ifEquals 'a+' enrol.customer.user.blood_group}}
                    <option value="a+" selected>A+</option>
                    <option value="a-">A-</option>
                    <option value="b+">B+</option>
                    <option value="b-">B-</option>
                    <option value="ab+">AB+</option>
                    <option value="ab-">AB-</option>
                    <option value="o+">O+</option>
                    <option value="o-">O-</option>
                    {{/ifEquals}}
                    {{#ifEquals 'a-' enrol.customer.user.blood_group}}
                    <option value="a+">A+</option>
                    <option value="a-" selected>A-</option>
                    <option value="b+">B+</option>
                    <option value="b-">B-</option>
                    <option value="ab+">AB+</option>
                    <option value="ab-">AB-</option>
                    <option value="o+">O+</option>
                    <option value="o-">O-</option>
                    {{/ifEquals}}

                    {{#ifEquals 'b+' enrol.customer.user.blood_group}}
                    <option value="a+">A+</option>
                    <option value="a-">A-</option>
                    <option value="b+" selected>B+</option>
                    <option value="b-">B-</option>
                    <option value="ab+">AB+</option>
                    <option value="ab-">AB-</option>
                    <option value="o+">O+</option>
                    <option value="o-">O-</option>
                    {{/ifEquals}}

                    {{#ifEquals 'b-' enrol.customer.user.blood_group}}
                    <option value="a+">A+</option>
                    <option value="a-">A-</option>
                    <option value="b+">B+</option>
                    <option value="b-" selected>B-</option>
                    <option value="ab+">AB+</option>
                    <option value="ab-">AB-</option>
                    <option value="o+">O+</option>
                    <option value="o-">O-</option>
                    {{/ifEquals}}

                    {{#ifEquals 'ab+' enrol.customer.user.blood_group}}
                    <option value="a+">A+</option>
                    <option value="a-">A-</option>
                    <option value="b+">B+</option>
                    <option value="b-">B-</option>
                    <option value="ab+" selected>AB+</option>
                    <option value="ab-">AB-</option>
                    <option value="o+">O+</option>
                    <option value="o-">O-</option>
                    {{/ifEquals}}

                    {{#ifEquals 'ab-' enrol.customer.user.blood_group}}
                    <option value="a+">A+</option>
                    <option value="a-">A-</option>
                    <option value="b+">B+</option>
                    <option value="b-">B-</option>
                    <option value="ab+">AB+</option>
                    <option value="ab-" selected>AB-</option>
                    <option value="o+">O+</option>
                    <option value="o-">O-</option>
                    {{/ifEquals}}

                    {{#ifEquals 'o+' enrol.customer.user.blood_group}}
                    <option value="a+">A+</option>
                    <option value="a-">A-</option>
                    <option value="b+">B+</option>
                    <option value="b-">B-</option>
                    <option value="ab+">AB+</option>
                    <option value="ab-">AB-</option>
                    <option value="o+" selected>O+</option>
                    <option value="o-">O-</option>
                    {{/ifEquals}}

                    {{#ifEquals 'o-' enrol.customer.user.blood_group}}
                    <option value="a+">A+</option>
                    <option value="a-">A-</option>
                    <option value="b+">B+</option>
                    <option value="b-">B-</option>
                    <option value="ab+">AB+</option>
                    <option value="ab-">AB-</option>
                    <option value="o+">O+</option>
                    <option value="o-" selected>O-</option>
                    {{/ifEquals}}
                </select>
                <small id="" class="form-text text-muted">
                    provide customer blood group
                </small>
            </div>
        </div>

        <div class="form-group row mb-2 col-md-6">
            <label class="col-md-4 col-form-label" for="example-textarea">
                address
            </label>
            <div class="col-md-8">
                <textarea class="form-control" id="example-textarea" rows="5" name="address"
                    placeholder="address...">{{enrol.customer.user.address}}</textarea>
            </div>
        </div>
        <div class="form-group row mb-2 col-md-6">
            <label class="col-md-4 col-form-label" for="phone">
                phone
            </label>
            <div class="col-md-8">
                <input type="text" id="phone" value="{{enrol.customer.user.phone}}" name="phone" class="form-control"
                    placeholder="phone" required>
            </div>
        </div>
    </div>
    <div class="col-md-12 row">
        <div class="form-group row mb-2 col-md-6">
            <label class="col-md-4 col-form-label" for="example-fileinput">
                customer profile image
            </label>
            <div class="col-md-8 custom-file-upload">
                <div class="wrapper-image-preview" style="margin-left: -6px;">
                    <div class="box" style="width: 250px;">
                        <div class="js--image-preview"
                            style="background-image: url(/public/uploads/images/users/{{{kaimage enrol.customer.user.name}}}.jpg); background-color: #F5F5F5;">
                        </div>
                        <div class="upload-options">
                            <label for="customer_image" class="btn"> <i class="mdi mdi-camera"></i>
                                upload an image
                            </label>
                            <input id="customer_image" style="visibility:hidden;" type="file" class="image-upload"
                                name="customer_image" accept="image/*">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-secondary col-md-4 col-sm-12 mb-4">
            update customer
        </button>
    </div>
</form>


<script type="text/javascript">

    $(document).ready(function () {
        initSelect2(['#personelId', '#gender', '#blood_group', '#classId', '#sectionId']);
    });
    function classWiseSection(classId) {
        $.ajax({
            url: "/sections/list/class/" + classId,
            success: function (response) {
                $('#sectionId').html(response);
            }
        });
    }
    var form;
    $(".ajaxForm").submit(function (e) {
        form = $(this);
        ajaxSubmit(e, form, 'POST', refreshForm);
    });
    var refreshForm = function () {
        form.trigger("reset");
        filter_customer();
    }
</script>
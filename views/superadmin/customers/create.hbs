    <div class="col-12">
        <div class="card pt-0">
            <ul class="nav nav-pills bg-nav-pills nav-justified mb-3">

                <li class="nav-item">
                    <a href="#" onclick="loadCreator('bulk')" class="nav-link bulk rounded-0 active">
                        <i class="mdi mdi-account-circle d-lg-none d-block mr-1"></i>
                        <span class="d-none d-lg-block">
                            bulk customer admission
                        </span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" onclick="loadCreator('excel')" class="nav-link excel rounded-0 ">
                        <i class="mdi mdi-settings-outline d-lg-none d-block mr-1"></i>
                        <span class="d-none d-lg-block">excel upload</span>
                    </a>

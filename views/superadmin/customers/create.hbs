        </div>
    </div>
</div>
<script>
    $(document).ready((e) => {
        loadCreator('bulk');
        initSelect2(['#storeId[]']);
    })
    function loadCreator(name) {
        switch (name) {
            case 'excel':
                console.log('excel here', name);
                $('.excel').addClass('active');
                $('.bulk').removeClass('active');
                $('.single').removeClass('active');
                break;

            default:
                console.log('bulk here', name);
                $('.bulk').addClass('active');
                $('.single').removeClass('active');
                $('.excel').removeClass('active');
                break;
        }
        let url = '/customers/create/' + name;
        $.ajax({
            url: url,
            method: 'GET',
            success: (data) => {
                $('.displayPanel').html('');
                $('.displayPanel').html(data);
            }
        });
        name = '';
    }
</script>
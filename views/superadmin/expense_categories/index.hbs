<script>
  var showAllExpenseCategories = function () {
    var url = '/expenses/categories/list';

    $.ajax({
      type: 'GET',
      url: url,
      success: function (response) {
        $('.expense_category_content').html(response);
        initDataTable('basic-datatable');
      }
    });
  }
  showAllExpenseCategories();
</script>
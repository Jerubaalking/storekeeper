<form method="POST" class="d-block ajaxForm" action="/expenses/categories/create">
  <div class="form-row">
    <div class="form-group col-md-12">
      <label for="name">Expense category name</label>
      <input type="text" class="form-control" id="name" name="name" required>
      <small id="name_help" class="form-text text-muted">
        provide expense category name
      </small>
    </div>

    <div class="form-group  col-md-12">
      <button class="btn btn-block btn-primary" type="submit">
        save expense category
      </button>
    </div>
  </div>
</form>

<script>
  $(".ajaxForm").validate({}); // Jquery form validation initialization
  $(".ajaxForm").submit(function (e) {
    var form = $(this);
    ajaxSubmit(e, form, 'POST', showAllExpenseCategories);
  });
</script>

<form method="POST" class="d-block ajaxForm" {{#each user}} action="/users/edit/{{id}}" {{/each}} >
{{!-- {{user_id}} --}}
    <div class="form-row">
        <div class="form-group">
                            <label for="business_id">Select Business</label>
                            <select class="form-control select2" name="business_id" id="business_id">
                                <option>select business</option>
                                {{#each businesses}}
                                <option selected value="{{id}}">{{business}}</option>
                                {{/each}}
                            </select>
        </div>
{{#each user}}
        <div class="form-group col-md-12">
            <label for="firstname">Firstname</label>
            <input type="text" class="form-control" id="firstname" value="{{firstname}}" name ="firstname" required>
        </div>
{{/each}}

{{#each user}}
        <div class="form-group col-md-12">
            <label for="firstname">Lastname</label>
            <input type="text" class="form-control" id="lastname" value="{{lastname}}" name ="lastname" required>
        </div>
{{/each}}

{{#each user}}
        <div class="form-group col-md-12">
            <label for="email">Email</label>
            <input type="email" class="form-control" value="{{user_email}}" id="user_email" name ="user_email" required>
        </div>
{{/each}}

{{#each user}}
        <div class="form-group col-md-12">
            <label for="phone">Phone</label>
            <input type="tel" class="form-control" id="phone" value="{{user_phone}}" name ="phone" required>
        </div>
{{/each}}

{{#each user}}
        <div class="form-group col-md-12">
            <label for="address">Address</label>
            <textarea class="form-control" id="address" name ="address">{{user_address}}</textarea>
        </div>
        {{/each}}
        
        <div class="form-group col-md-12">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" name ="password" required>
        </div>
        <div class="form-group  col-md-12">
            <button class="btn btn-block btn-primary" type="submit">update user</button>
        </div>
    </div>
</form>

<script>
    $(document).ready(function(){
        initSelect2(['#business_id']);
    });
    $(".ajaxForm").validate({});
    $(".ajaxForm").submit(function(e) {
            e.preventDefault();
            var form = $(this);
        //alert('here');
            var data = {
                //business_id:$('#business_id').val(),
                firstname:$('#firstname').val(),
                lastname:$('#lastname').val(),
                user_email:$('#user_email').val(),
                user_phone:$('#phone').val(),
                user_address:$('#address').val(),
                password:$('#password').val()
            }
        
        //console.log(this.title);
        ajaxSubmit(e, form, data, showAllUsers);
    });
</script>
